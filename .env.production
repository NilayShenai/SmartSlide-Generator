# Production environment configuration
# Copy this to .env.production for production deployment

# Required: Google AI API Key (for Gemini AI content generation)
GOOGLE_API_KEY=sample

# Optional: Pexels API Key (for automatic image fetching)
PEXELS_API_KEY=sample

# Application Configuration
SECRET_KEY=atmkbfj
DEBUG=False
PORT=5001
HOST=0.0.0.0

# Production Settings
FLASK_ENV=production
PYTHONUNBUFFERED=1

# Gunicorn Configuration
WORKERS=4
TIMEOUT=600
BIND=0.0.0.0:5001

# Security Settings
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# File Upload Settings
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
UPLOAD_FOLDER=uploads
OUTPUT_FOLDER=outputs

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
